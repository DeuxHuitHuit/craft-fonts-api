{
  "name": "deuxhuithuit/craft-fonts-api",
  "description": "Adds a simple API to get fonts hosted on the server",
  "type": "craft-plugin",
  "version": "1.0.0",
  "keywords": [
    "api",
    "fonts",
    "headless"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Deux Huit Huit",
      "homepage": "https://deuxhuithuit.com"
    }
  ],
  "support": {
    "email": "open-source@deuxhuithuit.com",
    "issues": "https://github.com/DeuxHuitHuit/craft-fonts-api/issues?state=open",
    "source": "https://github.com/DeuxHuitHuit/craft-fonts-api",
    "docs": "https://github.com/DeuxHuitHuit/craft-fonts-api/blob/main/README.md"
  },
  "require": {
    "php": "8.2.*|8.3.*",
    "craftcms/cms": "^5"
  },
  "autoload": {
    "psr-4": {
      "deuxhuithuit\\fontsapi\\": "src/"
    }
  },
  "extra": {
    "name": "Fonts API",
    "handle": "fonts-api",
    "hasCpSettings": false
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.60"
  }
}
